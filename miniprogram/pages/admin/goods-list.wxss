/* pages/admin/goods-list.wxss */
.admin-list-page {
  padding: 20rpx;
}

.header {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.goods-card {
  display: flex;
  margin-bottom: 30rpx;
  border: 1rpx solid #ddd;
  padding: 20rpx;
  border-radius: 16rpx;
  background: #fff;
}

.thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.category,
.status {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.btn-row {
  margin-top: 12rpx;
}

.btn-row button {
  margin-right: 12rpx;
}

.filter-bar {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  background: #f7f7f7;
  border-bottom: 1px solid #eee;
}

.picker {
  padding: 20rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  background: #fff;
  flex: 1;
  font-size: 28rpx;
}